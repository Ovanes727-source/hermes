<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/neon_blue">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/cyber_gold_dark" />
                    <corners android:radius="16dp" />
                </shape>
            </item>

            <!-- Main button -->
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="@color/cyber_gold_dark"
                        android:centerColor="@color/cyber_gold"
                        android:endColor="@color/cyber_gold_light" />
                    <corners android:radius="16dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/neon_blue" />
                </shape>
            </item>

            <!-- Inner glow -->
            <item
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="6dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#00000000"
                        android:endColor="#40FFFFFF" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</ripple>
